<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/bgImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/bg_main"
            android:scaleType="fitXY"
            android:contentDescription="@null" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/soundsRecycleView"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/testImage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            tools:src="@drawable/blind"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="2dp"
            app:riv_corner_radius="50dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/test2Image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="2dp"
            app:layout_constraintTop_toBottomOf="@id/testImage"
            app:riv_corner_radius="50dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/test3Image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:riv_border_color="@color/colorAccent"
            app:riv_border_width="2dp"
            app:layout_constraintTop_toBottomOf="@id/test2Image"
            app:riv_corner_radius="50dp" />

    </android.support.constraint.ConstraintLayout>
</layout>